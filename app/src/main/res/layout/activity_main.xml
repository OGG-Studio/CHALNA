<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <com.example.philip.chalna.CameraView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/activity_surface_view" />
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:alpha="0.5"
        android:id="@+id/guidedImageViewer"
        android:layout_gravity="center"/>

    <!-- LoadImageBtn -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/setting_btn"
                android:layout_marginLeft="2dp"
                android:padding="8dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/camera_setting_btn"/>
            <ImageView
                android:id="@+id/LoadImageBtn"
                android:padding="8dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/camera_fetch_icon"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_holder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right">
            <RelativeLayout
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/changeGuidedModeBtn"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/camera_guided_mode_icon"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/takePictureBtn"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:src="@drawable/camera_take_picture_icon"/>
            <RelativeLayout
                android:layout_width="76dp" android:layout_height="76dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/changeViewBtn"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/camera_view_mode_icon"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.example.philip.chalna.VerticalSeekbar
        android:layout_width="30dp"
        android:layout_height="250dp"
        android:layout_gravity="left|center"
        android:id="@+id/seek_bar"
        android:max="100"
        android:progress="50">
    </com.example.philip.chalna.VerticalSeekbar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:visibility="invisible"
        android:id="@+id/flash_image"/>
</FrameLayout>
